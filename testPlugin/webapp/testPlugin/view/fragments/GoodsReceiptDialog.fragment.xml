<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <Dialog 
        id="goodsReceiptDialog"
        title="{i18n>GoodReceipt.Title}"
        class="sapUiContentPadding"
        resizable="false"
        draggable="true"
        afterClose=".onDialogClose">

        <f:SimpleForm
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="3"
            labelSpanL="3"
            labelSpanM="3"
            labelSpanS="3"
            adjustLabelSpan="false"
            columnsXL="1"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="false"
            class="sapUiSmallMargin sapUiNoContentPadding"
            width="100%">

            <!-- Material Number -->
            <Label text="{i18n>GoodReceipt.Label.Mat}" required="true"/>
            <Input value="{wmModel>/selectedItem/material}" editable="false" enabled="false"/>

            <!-- Quantity / Unit -->
            <Label text="{i18n>GoodReceipt.Label.Qty}" required="true"/>
            <HBox>
                <Input width="50%" value="{wmModel>/selectedItem/quantity}" type="Number" editable="false" enabled="false"/>
                <StepInput
						value="{wmModel>/selectedItem/stepQuantity}"
						displayValuePrecision="0"
						min="1"
						max="{wmModel>/selectedItem/stepMaxQuantity}"
						step="1"
						enabled="{wmModel>/selectedItem/enabled}"
						editable="true"
                        description="{i18n>GoodReceipt.Label.Step}"
						validationMode="LiveChange"
						change="onChangeStep"/>
                <Select selectedKey="{wmModel>/selectedItem/uom}" enabled="false">
                    <core:Item key="PC" text="{i18n>GoodReceipt.Select.Txt1}"/>
                    <core:Item key="KG" text="{i18n>GoodReceipt.Select.Txt2}"/>
                </Select>
                <Button text="{i18n>GoodReceipt.Btn}" enabled="false"/>
            </HBox>

            <!-- Storage Location -->
            <Label text="{i18n>GoodReceipt.Label.Stor}" required="true"/>
            <Input value="{wmModel>/selectedItem/storageLocation}" editable="false" enabled="false"/>

            <!-- Posted By -->
            <Label text="{i18n>GoodReceipt.Label.Post}"/>
            <Input value="{wmModel>/selectedItem/postedBy}" editable="false" enabled="false"/>

            <!-- Posting Date Time -->
            <Label text="{i18n>GoodReceipt.Label.PostDate}" required="true"/>
            <DateTimePicker
                value="{wmModel>/selectedItem/postingDateTime}"
                editable="false"
                valueFormat="yyyy-MM-dd'T'HH:mm:ss.SSS'Z'"
                displayFormat="medium"
                enabled="false"
            />

            <!-- Comments -->
            <Label text="{i18n>GoodReceipt.Label.Comm}"/>
            <TextArea value="{wmModel>/selectedItem/comments}" rows="3"/>
        </f:SimpleForm>

        <beginButton>
            <Button text="{i18n>GoodReceipt.Btn.Conf}" type="Emphasized" press=".onDialogConfirm"/>
        </beginButton>
        <endButton>
            <Button text="{i18n>GoodReceipt.Btn.Canc}" press=".onCloseDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>