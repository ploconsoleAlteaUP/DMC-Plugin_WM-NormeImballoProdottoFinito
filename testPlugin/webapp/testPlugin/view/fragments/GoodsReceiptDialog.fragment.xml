<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <Dialog 
        id="goodsReceiptDialog"
        title="Create Goods Receipt"
        class="sapUiContentPadding"
        resizable="false"
        draggable="true"
        afterClose=".onDialogClose">

        <f:SimpleForm
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="3"
            labelSpanL="3"
            labelSpanM="3"
            labelSpanS="3"
            adjustLabelSpan="false"
            columnsXL="1"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="false"
            class="sapUiSmallMargin sapUiNoContentPadding"
            width="100%">

            <!-- Material Number -->
            <Label text="Material Number" required="true"/>
            <Input value="{wmModel>/selectedItem/material}" editable="false" enabled="false"/>

            <!-- Quantity / Unit -->
            <Label text="Quantity / Unit" required="true"/>
            <HBox>
                <Input width="50%" value="{wmModel>/selectedItem/quantity}" type="Number" editable="false" enabled="false"/>
                <StepInput
						value="{wmModel>/selectedItem/stepQuantity}"
						displayValuePrecision="0"
						min="1"
						max="{wmModel>/selectedItem/stepMaxQuantity}"
						step="1"
						enabled="true"
						editable="true"
                        description="Scatola/e"
						validationMode="LiveChange"
						change="onChangeStep"/>
                <Select selectedKey="{wmModel>/selectedItem/uom}" enabled="false">
                    <core:Item key="PC" text="PC - Piece"/>
                    <core:Item key="KG" text="KG - Kilogram"/>
                </Select>
                <Button text="Calculate" enabled="false"/>
            </HBox>

            <!-- Storage Location -->
            <Label text="Storage Location" required="true"/>
            <Input value="{wmModel>/selectedItem/storageLocation}" editable="false" enabled="false"/>

            <!-- Posted By -->
            <Label text="Posted By"/>
            <Input value="{wmModel>/selectedItem/postedBy}" editable="false" enabled="false"/>

            <!-- Posting Date Time -->
            <Label text="Posting Date Time" required="true"/>
            <DateTimePicker
                value="{wmModel>/selectedItem/postingDateTime}"
                editable="false"
                valueFormat="yyyy-MM-dd'T'HH:mm:ss.SSS'Z'"
                displayFormat="medium"
                enabled="false"
            />

            <!-- Comments -->
            <Label text="Comments"/>
            <TextArea value="{wmModel>/selectedItem/comments}" rows="3"/>
        </f:SimpleForm>

        <beginButton>
            <Button text="Confirm" type="Emphasized" press=".onDialogConfirm"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onCloseDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>