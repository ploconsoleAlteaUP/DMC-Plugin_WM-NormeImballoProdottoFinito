<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog
        id="postingHistoryDialog"
        title="{i18n>PostHistory.Title}"
        resizable="true"
        draggable="true"
        contentWidth="80%"
        contentHeight="50%">
        <VBox class="sapUiSmallMargin">
            <Table
                busy="{wmModel>/busyPostings}"
                items="{
                    path: 'wmModel>/postingsHistory'
                }"
                inset="false"
                fixedLayout="true"
                growing="true"
                growingScrollToLoad="true"
                growingThreshold="20"
                updateFinished=".onPostingsUpdateFinished">
                <columns>
                    <Column><Text text="{i18n>PostHistory.Table.MatNum}"/></Column>
                    <Column><Text text="{i18n>PostHistory.Table.Qty}"/></Column>
                    <!-- <Column><Text text="Parallel Quantity"/></Column>
                    <Column><Text text="Batch ID"/></Column> -->
                    <Column><Text text="{i18n>PostHistory.Table.Sto}"/></Column>
                    <Column><Text text="{i18n>PostHistory.Table.PosBy}"/></Column>
                    <Column><Text text="{i18n>PostHistory.Table.Stat}"/></Column>
                    <Column><Text text="{i18n>PostHistory.Table.PosDate}"/></Column>
                    <Column><Text text="{i18n>PostHistory.Table.CraDat}"/></Column>
                    <Column><Text text="{i18n>PostHistory.Table.Comm}"/></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{wmModel>material}"/>
                            <!-- Quantity + Unit -->
                            <Text text="{= ${wmModel>quantity/value} + ' ' + ${wmModel>quantity/unitOfMeasure/uom} }"/>
                            <!-- <Text text="{= ${wmModel>parallelQuantity/value} + ' ' + ${wmModel>parallelQuantity/unitOfMeasure/uom} }"/>
                            <Text text="{wmModel>batchNumber}"/> -->
                            <Text text="{wmModel>storageLocation}"/>
                            <Text text="{wmModel>userId}"/>
                            <Text text="{wmModel>cancellationStatus}"/>
                            <Text text="{wmModel>postingDateTimeDisplay}"/>
                            <Text text="{wmModel>createdDateTimeDisplay}"/>
                            <Text text="{wmModel>comments}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
        <endButton>
            <Button text="Close" press=".onCloseDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>