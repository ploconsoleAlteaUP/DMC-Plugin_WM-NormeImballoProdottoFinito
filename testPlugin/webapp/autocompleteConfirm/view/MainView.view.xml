<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="altea.dmc.plugin.testPlugin.autocompleteConfirm.controller.MainView" width="100%" height="100%">
		
        <Panel 
                id="panelPlugin"  
                width="100%"
                height="100%"
                expandable="false"
                expanded="true"
                accessibleRole="Region"
                backgroundDesign="Transparent"
                class="sapUiNoContentPadding">  
                <headerToolbar>
                    <Toolbar height="3rem">
                        <Title id="headerTitle" text="Warehouse Management"/>
                        <ToolbarSpacer/>
                        <Button 
                            id="resfreshBtn"
                            icon="sap-icon://refresh" press=".onRefresh" class="sapUiTinyMarginTop"/>
                        <!-- <Label text="Badge Number: {wmModel>/userBadge}"/> -->
                    </Toolbar>
                </headerToolbar>
                <content> 
                    <HeaderContainer id="wm" scrollStep="200" height="8rem">
                        <TileContent id="qtyTotale" busy="{wmModel>/qtyTotaleBusy}" visible="true" footer="Qty totale">
                            <content>
                                <NumericContent value="{wmModel>/qtyTotale}" icon="sap-icon://fridge" truncateValueTo="5"/>
                            </content>
                        </TileContent>
                        <TileContent id="qtyDaModificare" busy="{wmModel>/qtyDaModificareBusy}" visible="true" footer="Qty da modificare">
                            <content>
                                <NumericContent value="{wmModel>/qtyDaModificare}" icon="sap-icon://sap-box"/>
                            </content>
                        </TileContent>
                        <TileContent id="qtyModificata" busy="{wmModel>/qtyModificataBusy}" visible="true" footer="Qty modificata">
                            <content>
                                <NumericContent value="{wmModel>/qtyModificata}" icon="sap-icon://inbox"/>
                            </content>
                        </TileContent>
                    </HeaderContainer>

                    <!-- Table -->
                    <Table
                        id="itemsTable"
                        headerText="{= 'Posizioni (' + ( ${wmModel>/lineItems} ? ${wmModel>/lineItems}.length : 0 ) + ')'}"
                        items="{wmModel>/lineItems}"                        
                        width="100%"
                        inset="false"
                        mode="None">
                        <headerToolbar>
                            <OverflowToolbar>
                                <ToolbarSpacer/>
                                <Button 
                                    id="eseguiBtn" 
                                    enabled="{enableModel>/eseguiBtn}"
                                    icon="sap-icon://journey-change" text="Esegui Autocomplete e Confirm" press=".onEseguiAutocomplete" class="sapUiTinyMarginTop"/>
                            </OverflowToolbar>
                        </headerToolbar>
                        
                        <columns>
                            <Column><Text text="Material No."/></Column>
                            <Column><Text text="Description"/></Column>
                        </columns>

                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text text="{wmModel>material}"/>
                                    <Text text="{wmModel>description}"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </content>
	    </Panel>		
</mvc:View>